<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.siliconvalleyinsight.mwork" >

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="15" />

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!--
     To retrieve OAuth 2.0 tokens or invalidate tokens to disconnect a user. This disconnect
     option is required to comply with the Google+ Sign-In developer policies
    -->
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <!-- To retrieve the account name (email) as part of sign-in: -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <android:uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <android:uses-permission android:name="android.permission.READ_CALL_LOG" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".singletons.MWorkApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".activities.HomeActivity"
            android:label="@string/title_activity_home" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name=".activities.CashOutActivity"
            android:label="@string/title_activity_cash_out" >
        </activity>
        <activity
            android:name=".activities.AgeSelectionActivity"
            android:label="@string/title_activity_age_selection" >
        </activity>
        <activity
            android:name=".activities.BetterCashOutActivity"
            android:label="@string/title_activity_better_cash_out" >
        </activity>
        <activity
            android:name=".activities.CashoutBankActivity"
            android:label="@string/title_activity_cashout_bank" >
        </activity>
        <activity
            android:name=".activities.CashoutPaypalActivity"
            android:label="@string/title_activity_cashout_paypal" >
        </activity>
        <activity
            android:name=".activities.CashoutVenmoActivity"
            android:label="@string/title_activity_cashout_venmo" >
        </activity>
        <activity
            android:name=".activities.LanguageSelectionActivity"
            android:label="@string/title_activity_language_selection" >
        </activity>
        <activity
            android:name=".activities.LocationEntryActivity"
            android:label="@string/title_activity_location_entry" >
        </activity>
        <activity
            android:name=".activities.NameEntryActivity"
            android:label="@string/title_activity_name_entry" >
        </activity>
        <activity
            android:name=".activities.OneHandedTaskActivity"
            android:label="@string/title_activity_one_handed_task" >
        </activity>
        <activity
            android:name=".activities.SecludedTaskActivity"
            android:label="@string/title_activity_secluded_task" >
        </activity>
        <activity
            android:name=".activities.SecludedTaskEndActivity"
            android:label="@string/title_activity_secluded_task_end" >
        </activity>
        <activity
            android:name=".activities.SecludedTaskMiddle2Activity"
            android:label="@string/title_activity_secluded_task_middle2" >
        </activity>
        <activity
            android:name=".activities.SecludedTaskMiddle1Activity"
            android:label="@string/title_activity_secluded_task_middle1" >
        </activity>
        <activity
            android:name=".activities.SecludedTaskStartActivity"
            android:label="@string/title_activity_secluded_task_start" >
        </activity>
        <activity
            android:name=".activities.SetupAccountActivity"
            android:label="@string/title_activity_setup_account" >
        </activity>
        <activity
            android:name=".activities.TwoHandedActivity"
            android:label="@string/title_activity_two_handed" >
        </activity>
        <activity
            android:name=".activities.TwoHandedTaskActivity"
            android:label="@string/title_activity_two_handed_task" >
        </activity>
        <activity
            android:name=".activities.SecludedTaskActivityBase"
            android:label="@string/title_activity_secluded_task_activity_base" >
        </activity>
        <activity
            android:name=".activities.PhotoTaskActivity"
            android:label="@string/title_activity_photo_task" >
        </activity>
    </application>

</manifest>
