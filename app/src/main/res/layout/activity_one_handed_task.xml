<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.siliconvalleyinsight.mwork.activities.OneHandedTaskActivity">

    <!--John: Please change action bar text to read "1 Handed Task" and have
    the ability to navigate back to the task menu.-->

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="350dp"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/textView"
            android:text="Is this a dog?"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/white"
            android:background="@color/black"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_gravity="center_horizontal"
            android:layout_paddingBottom="10dp"
            android:layout_marginBottom="10dp"/>

        <ImageView
            android:id="@+id/imageView"
            android:contentDescription="questionnaire_img"
            android:src="@drawable/dog_test_1"
            android:layout_width="fill_parent"
            android:layout_height="360dp"
            android:scaleType="fitXY"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnNo"
                android:text="No"
                android:textColor="@color/white"
                android:background="@color/red"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".10"
                android:gravity="center"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/btnYes"
                android:text="Yes"
                android:textColor="@color/white"
                android:background="@color/green"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".10"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
